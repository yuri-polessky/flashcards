<p style="font-size: 22px;">
  Первый в мире удобный менеджер флеш-карточек. Именно так.
</p>

<% if @review %>
  <div class="thumbnail">
    <%= image_tag @review.card.picture.url(:medium) %>
  </div>
  <div class="panel panel-primary">
    
    <div class="panel-heading">
      <h2 class="panel-title">
        <%= @review.card.translated_text %>
      </h2>
    </div>
    
    <div class="panel-body">
      <%= simple_form_for :review, url: reviews_path, method: :create do |f| %>
        <%= f.input :answer, label: "Исходный текст" %>
        <%= f.input :card_id, as: :hidden %>
        <%= f.button :submit, "Проверить" %>
      <% end %>
    </div>
  
  </div>
<% end %>